# Import - filtre à intégrer en amont
dads_postes <- read_rds("data/dads_filtre_05_15.rds") %>% 
  filter(annee != 2005) %>% 
  mutate(filtre_poste = fct_recode(FILT,
                           "Annexe" = "2",
