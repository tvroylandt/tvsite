  group_by(annee, DATDEB, DATFIN, filtre_poste) %>% 
  count() %>% 
  mutate(n = n * 12)

seq_empl_jour <- tibble(jour = seq(-30, 360, 1)) %>% 
  mutate(join = "1") %>% 
  full_join((seq_empl %>% 
               mutate(join = "1")),
            by = "join") %>% 
  mutate(ind_ok = case_when(jour >= DATDEB & jour <= DATFIN ~ "1",
                            TRUE ~ "0")) %>% 
  filter(ind_ok == "1") %>% 
  group_by(annee, jour, filtre_poste) %>% 
  summarise(n = sum(n))  %>% 
  filter(jour > 0)
